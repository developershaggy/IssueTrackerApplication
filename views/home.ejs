<link rel="stylesheet" href="/css/home.css">


<div id="project-container" class="position-relative">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Projects</h2>
        <div class="dropdown sort-project">
            <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Sort By
            </button>
            <ul class="dropdown-menu">     
              <li><a class="dropdown-item" href="#" id="project-sort-title">Title</a></li>  
              <li><a class="dropdown-item" href="#" id="project-sort-author">Author</a></li>    
              <li><a class="dropdown-item" href="#" id="project-sort-date-as">Newest</a></li>
              <li><a class="dropdown-item" href="#" id="project-sort-date-ds">Oldest</a></li>
            </ul>
          </div>
    </div>
    <!--passing the projects as an attribute to the projects list-->
    <div id="project-list" data-projects="<%=JSON.stringify(locals.projects)%>">
        <%if(locals.projects && locals.projects.length>0){%>
            <!--Using a for loop to iterate over projects-->
            <%for(project of projects){%>
                 <%-include('partials/_project-item')-%>
            <%}%>
         <%}else{%>
             <%-include('partials/_nothingtoshow')-%>
         <%}%>
    </div>
</div>

<script type="text/javascript" src="/js/home.js"></script>